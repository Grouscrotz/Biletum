<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TicketDetailsFragment">

    <FrameLayout
        android:id="@+id/ticketDetailts_frameLayout_card"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/corner_round_et"
        android:backgroundTint="#37C8C8C8"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/ticketDetailts_tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Откуда"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:text="ст. Солнечная"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Куда"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Калуга-1"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Номер поезда"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6157/6158"
                android:textStyle="bold"
                />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end|top"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время отправки"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:text="12:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время прибытия"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19:30"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="537.00"
            android:textSize="20dp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_ruble"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество билетов"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/ticketDetailts_button_minus"
            android:layout_width="33dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:backgroundTint="@android:color/transparent"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="—"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/black"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="1"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/ticketDetailts_button_plus"
            android:layout_width="33dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@android:color/transparent"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="+"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/black"
            />
    </LinearLayout>


    </FrameLayout>


    <FrameLayout
        android:id="@+id/ticketDetailts_frameLayout_card_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/avatar_corner"
        android:backgroundTint="#37C8C8C8"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ticketDetailts_frameLayout_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:text="Итого"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/ticketDetailts_tV_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="65dp"
            android:text="537.00"
            android:textSize="22dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_ruble"
            android:layout_gravity="end|center"
            android:layout_marginEnd="15dp"
            />

    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Купить"
        android:textSize="22dp"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toBottomOf="@id/ticketDetailts_frameLayout_card_price"
        app:layout_constraintEnd_toEndOf="@id/ticketDetailts_frameLayout_card_price"
        android:layout_marginTop="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>